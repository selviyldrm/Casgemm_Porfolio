@model List<Casgem_Proje.Models.Entities.TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Ben Kimim</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Cv İndir</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.AboutID</td>
    <td>@item.AboutTitle</td>
    <td>@item.AboutDescription</td>
    <td><a href="/Download/Index/" class="btn btn-outline-danger">Cv İndir</a></td>
    <td><a href="/WhoAmI/UpdateWhoAmI/@item.AboutID" class="btn btn-outline-success">Güncelle</a></td>
</tr>
    }
</table> 