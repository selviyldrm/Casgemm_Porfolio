@model Casgem_Proje.Models.Entities.TblAbout
@{
    ViewBag.Title = "UpdateWhoAmI";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Bilgi Güncelleme Sayfası</h2>

<form method="post">
    <label>Ben Kimim</label>
    <@Html.HiddenFor(x=>x.AboutID)
     <br />
    <label>Başlık</label>
    <@Html.TextBoxFor(x=>x.AboutTitle, new { @class = "form-control" })
     <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x=>x.AboutDescription,new  {@class="form-control" } )
        <br />
        <button class="btn btn-info">Güncellle</button>
</form>

